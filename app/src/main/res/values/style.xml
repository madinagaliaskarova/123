        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>

    <style name="Base.TextViolet" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Base.TextBig" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

